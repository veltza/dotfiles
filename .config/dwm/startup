#!/bin/dash

xsettingsd &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
. colortemp
. tearfree
picom &
dunst &
setbg &
dsblocks &
dwm-pulsedaemon
easyeffects --gapplication-service &
set-chromium-frame off &
set-firefox-titlebar off &
udiskie &
dwm-lock start &

# dwm exit codes: 0 = quit, 100 = restart, 101 = poweroff, 102 = reboot
while [ ${exitcode:-100} -eq 100 ]; do
    dwm; exitcode=$?
done

setbg --clear
dwm-lock stop
killall -q xsettingsd picom dunst dsblocks pactl easyeffects udiskie
sleep 0.1

case $exitcode in
    101) systemctl poweroff ;;
    102) systemctl reboot ;;
esac
