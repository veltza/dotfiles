# Alias for lf
lf() {
    command lf "$@"
    update_terminal_title
}

# Change working dir in shell to last dir in lf on exit (adapted from ranger).
lfcd() {
    command lf -last-dir-path="${XDG_RUNTIME_DIR:-$HOME}/lfcd-last-dir-path" "$@" && cdlf
    update_terminal_title
}

# Change working dir in shell to last dir in lf
cdlf() {
    local dir=$(cat "${XDG_RUNTIME_DIR:-$HOME}/lfcd-last-dir-path" 2>/dev/null)
    [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
}

# tmux wrapper
tm() {
    if [ $# -gt 0 ]; then
        tmux "$@"
    elif tmux ls 2> /dev/null | grep -vq attached; then
        tmux attach-session
    else
        tmux new-session
    fi
    update_terminal_title
}

# Run the system update in a tmux session
update() {
    if [ -n "${TMUX:-}" ]; then
        system-update
    elif tmux has-session -t 'Update' 2> /dev/null; then
        tmux attach-session -t 'Update' \; new-window \; send-keys "system-update" C-m
    else
        tmux new-session -s 'Update' \; send-keys "system-update" C-m
    fi
    update_terminal_title
}

system-update() {
    if command -v yay &>/dev/null; then
        yay -Pw 2>/dev/null; yay
    elif command -v pacman &>/dev/null; then
        sudo pacman -Syu
    else
        aupdate
    fi
}

# Use fd (https://github.com/sharkdp/fd) instead of the default find
# command for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
    if command -v fd &>/dev/null; then
        fd --follow -H -E .git . "$1"
    else
        echo "$1"
        command find -L "$1" \
          -name .git -prune -o -name .hg -prune -o -name .svn -prune -o \( -type d -o -type f -o -type l \) \
          -a -not -path "$1" -print 2> /dev/null | sed 's@^\./@@'
    fi
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
    if command -v fd &>/dev/null; then
        fd -td --follow -H -E .git . "$1"
    else
        command find -L "$1" \
          -name .git -prune -o -name .hg -prune -o -name .svn -prune -o -type d \
          -a -not -path "$1" -print 2> /dev/null | sed 's@^\./@@'
    fi
}
